<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_background" 
    >
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_task"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:textColor="#0C7CC7"/>
    
            
    <EditText
        android:id="@+id/description"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txt_description"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button 
        android:id="@+id/btn_date"
        android:onClick="showDateDialog"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="3sp"
        android:layout_marginRight="2sp"
        android:text="@string/btn_date"
        android:textColor="#FFFFFF"
        android:background="#0C7CC7"/>
        <Button 
        android:id="@+id/btn_time"
        android:onClick="showTimeDialog"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="3sp"
        android:text="@string/btn_time"
        android:textColor="#FFFFFF"
        android:background="#0C7CC7"/>
        
    </LinearLayout>
        
    <LinearLayout
        android:id="@+id/rd_grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="vertical">
       
         <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:background="#65C6BB">
	        
	        <View 
	            android:layout_width="70sp"
	        	android:layout_height="70sp"
	        	android:layout_marginTop="5sp"
	        	android:layout_marginBottom="5sp"
	        	android:background="@drawable/not_important_circle"/>
	        
	        <RadioButton
	            android:id="@+id/rd_not_important"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	           	android:layout_gravity="center_vertical"
	            android:text="@string/rd_not_important"
	            android:textColor="#FFFFFF"
	            android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	       	android:background="#F4D03F">
	        
	        <View 
	            android:layout_width="70sp"
	        	android:layout_height="70sp"
	        	android:layout_marginTop="5sp"
	        	android:layout_marginBottom="5sp"
	        	android:background="@drawable/important_circle"/>
	        
	        <RadioButton
	            android:id="@+id/rd_important"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	           	android:layout_gravity="center_vertical"
	            android:text="@string/rd_important"
	            android:textColor="#FFFFFF"
	            android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:background="#E08283">
	        
	        <View 
	            android:layout_width="70sp"
	        	android:layout_height="70sp"
	        	android:layout_marginTop="5sp"
	        	android:layout_marginBottom="5sp"
	        	android:background="@drawable/very_important_circle"/>
	        
	        <RadioButton
	            android:id="@+id/rd_very_important"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	           	android:layout_gravity="center_vertical"
	            android:text="@string/rd_very_important"
	            android:textColor="#FFFFFF"
	            android:textSize="25sp" />
        </LinearLayout>
        
       
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >
        
        <Button 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5sp"
	        android:layout_marginRight="5sp"
	        android:layout_marginBottom="3sp"
	        android:text="@string/btn_save_task"
	        android:textColor="#FFFFFF"
	        android:layout_gravity="bottom"
	        android:background="#0C7CC7"
	        android:onClick="saveTask"/>
        
    </LinearLayout>
    
</LinearLayout>
















